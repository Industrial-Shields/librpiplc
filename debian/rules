#!/usr/bin/make -f

%:
	dh $@ --buildsystem=cmake

override_dh_auto_configure:
	dh_auto_configure -- -DCMAKE_BUILD_TYPE=DebPackage -DPLC_VERSION=ALL -DPLC_MODEL=RPIPLC

override_dh_install:
	dh_install


# The librpiplc.so symlink must be in the -dev package, lintian warning
	mkdir debian/librpiplc-dev/usr/lib/
	mv debian/librpiplc/usr/lib/librpiplc.so debian/librpiplc-dev/usr/lib/librpiplc.so

# Create librpiplc folder for tests
	mkdir debian/librpiplc/usr/lib/librpiplc/
